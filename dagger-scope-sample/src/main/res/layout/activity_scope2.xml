<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Scope2Activity">

    <Button
        android:id="@+id/btn_get_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="获取UserData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_get_data_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="获取ActivityUserData-scopeA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_data" />
    <Button
        android:id="@+id/btn_get_data_singleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="获取SingletonUserData-singleton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_data_activity" />
    <Button
        android:id="@+id/btn_get_data_application"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="获取ApplicationUserData-ScopeB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_data_singleton"/>
</androidx.constraintlayout.widget.ConstraintLayout>